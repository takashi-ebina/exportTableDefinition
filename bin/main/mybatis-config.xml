<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<setting name="cacheEnabled" value="false"/>
	</settings>
	<typeAliases>
		<typeAlias type="com.export_table_definition.infrastructure.db.repository.dto.BaseInfoDto" alias="BaseInfoDto"/>
		<typeAlias type="com.export_table_definition.infrastructure.db.repository.dto.TableDto" alias="TableDto"/>
		<typeAlias type="com.export_table_definition.infrastructure.db.repository.dto.ColumnDto" alias="ColumnDto"/>
		<typeAlias type="com.export_table_definition.infrastructure.db.repository.dto.IndexDto" alias="IndexDto"/>
		<typeAlias type="com.export_table_definition.infrastructure.db.repository.dto.ConstraintDto" alias="ConstraintDto"/>
		<typeAlias type="com.export_table_definition.infrastructure.db.repository.dto.ForeignkeyDto" alias="ForeignkeyDto"/>
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="mapper/postgresql/tableDefinitionMapper.xml"/>
		<mapper resource="mapper/oracle/tableDefinitionMapper.xml"/>
	</mappers>
</configuration>
